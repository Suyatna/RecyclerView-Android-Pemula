<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/line_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_list_photo"
        android:layout_width="@dimen/image_medium"
        android:layout_height="@dimen/image_medium"
        tools:src="@android:color/holo_blue_bright"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_list_name"
            style="@style/TextDesc.Value"
            android:layout_marginBottom="@dimen/small_margin"
            tools:text="Eren Jaeger"
            android:textSize="@dimen/large_text"/>

        <TextView
            android:id="@+id/tv_list_alias"
            style="@style/TextDesc.Field"
            tools:text="Titan Boy  (巨人の小僧)"/>

    </LinearLayout>
</LinearLayout>